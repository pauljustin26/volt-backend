{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
